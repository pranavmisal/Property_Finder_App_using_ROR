<div class="property-main-photo" style="background-image:url('<%= property_photo_url @property %>')">
    <div class="photo-overlay">        
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-8">
            <div class="row">
                <div class="col-6">
                    <p class="mb-0"><%= @property.address %></p>
                    <p class="h2"><%= @property.price > 0 ? number_to_currency(@property.price, precision: 0) : "For Sale" %></p>
                </div>
                <div class="col-6 text-center">
                    <div class="row bg-light p-3 mr-3">
                        <div class="col-4">
                            <p class="mb-0"><strong>Rooms</strong></p>
                            <span class="lead"><%= @property.rooms %></span>
                        </div>
                        <div class="col-4">
                            <p class="mb-0"><strong>Bathrooms</strong></p>
                            <span class="lead"><%= @property.bathrooms %></span>
                        </div>
                        <div class="col-4">
                            <p class="mb-0"><strong>Parking</strong></p>
                            <span class="lead"><%= @property.parking_spaces %></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <p>
                        <strong>Name:</strong>
                        <%= @property.name %>
                    </p>

                    <p>
                        <strong>Address:</strong>
                        <%= @property.address %>
                    </p>

                    <p>
                        <strong>Price:</strong>
                        <%= @property.price %>
                    </p>

                    <p>
                        <strong>Rooms:</strong>
                        <%= @property.rooms %>
                    </p>

                    <p>
                        <strong>Bathrooms:</strong>
                        <%= @property.bathrooms %>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-4">
            <%= render "properties/agent_details" %>
            <%#= render "properties/agent_details" %>
        </div> 
    </div>
</div>



